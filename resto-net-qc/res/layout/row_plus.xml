<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:padding="5dip" >
    
 

<TextView
	android:id="@+id/Etablissement" 
	 android:layout_width="wrap_content"
	android:layout_height="40sp"
	
android:layout_alignParentTop="true"
    android:textColor="@color/holoBlue"
          android:ems="10"
        android:textSize="16sp" 
 
	/>

<TextView 
	android:id="@+id/count_txt"
	 android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:text="@string/amende_plus_txt"

  android:layout_alignParentRight="true"	
	android:textColor="#000000"/>

<TextView 
	android:id="@+id/Count" android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
     android:paddingRight="12sp"
      android:layout_toLeftOf="@+id/count_txt"
	android:textColor="#000000"/>

  <ImageButton
    android:id="@+id/ImageButton01"
    android:layout_width="40sp"
    android:layout_height="wrap_content"
    android:src="@drawable/location"
    android:layout_below="@+id/Count"
     android:layout_alignParentRight="true"
   
     />
     <TextView
	android:id="@+id/Adresse" 
    android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:layout_toLeftOf="@+id/Exploitant"
	  android:layout_alignParentLeft="true"
	android:layout_below="@+id/Etablissement"
	/>
 

    
         <ImageView 
        android:id="@+id/Exploitant" 
        android:layout_width="60sp" 
	    android:layout_height="40sp"
	    
	     android:layout_toLeftOf="@+id/ImageButton01"
	  android:layout_below="@+id/count_txt"
	
	    
        />
 
</RelativeLayout>

