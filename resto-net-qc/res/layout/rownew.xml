<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:padding="5dip" >
    >
 

<TextView
	android:id="@+id/Etablissement" 
	 android:layout_width="wrap_content"
	android:layout_height="40sp"
	
android:layout_alignParentTop="true"
    android:textColor="@color/holoBlue"
          android:ems="10"
        android:textSize="16sp" 
 
	/>
<TextView
    android:id="@+id/amende"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/amende_txt"
    android:layout_toLeftOf="@+id/Montant"
    android:textColor="#000000" />

<TextView 
	android:id="@+id/Montant" android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	   android:focusable="false"
     android:layout_toLeftOf="@+id/dollar"
	android:textColor="#ffff0000"/>
<TextView 
	android:id="@+id/dollar" android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:text="$ "
   
	android:textColor="#ffff0000"
	android:layout_alignParentRight="true"/>
  <ImageButton
    android:id="@+id/ImageButton01"
    android:layout_width="40sp"
    android:layout_height="wrap_content"
    android:src="@drawable/location"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
     android:layout_below="@+id/dollar"
   
     />
    <TextView
	android:id="@+id/Adresse" 
    android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textColor="#000000"
	android:layout_toLeftOf="@+id/Exploitant"
	  android:layout_alignParentLeft="true"
	android:layout_below="@+id/Etablissement"
	/>
   <TextView
  android:id="@+id/DateLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/judgement"
    android:layout_below="@+id/Adresse"
	android:layout_alignParentBottom="true"
    android:textColor="#000000" />

    <TextView
	android:id="@+id/Date" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textColor="#000000"
    android:layout_toRightOf="@+id/DateLabel"
    android:layout_alignParentBottom="true"
     
	/>
   
    
         <ImageView 
        android:id="@+id/Exploitant" 
        android:layout_width="40sp" 
	    android:layout_height="40sp"
	    android:layout_toLeftOf="@+id/ImageButton01"
	  android:layout_below="@+id/amende"
	
	    
        />
  
  


</RelativeLayout>

